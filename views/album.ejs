<link href="/css/gallery.css" rel="stylesheet" type="text/css">
<link href="/css/theme.css" rel="stylesheet" type="text/css">
<% if (!album.isRoot){ %>
  <% for (var i=0; i<breadcrumb.length; i++) { %>
  <% if (i==breadcrumb.length-1){ %>
  <%= breadcrumb[i].name %>
  <% }else{ %>
  <a href="<%= breadcrumb[i].url %>"> <%= breadcrumb[i].name %> &raquo; </a>
  <% } %>

  <% } %>
<% } %>
<h1><%= album.name %></h1>
  <% if (album.description){ %>
    <p><%- album.description %></p>
  <% } %>

  <% if (album.albums.length>0){ %>
  <h2>Albums</h2>
  <ul class="albums">
    <% album.albums.forEach(function(album){ %>
      <li class="thumb">
        <a href="<%= rootDir%>/<%= album.path%>">
          <div class="image"><img src="/<%= directory %>/<%= album.thumb %>" alt="<%= album.name%>"><br /></div>
          <span class="caption"><%= album.name%></span>
          <% if (album.description){ %>
            <p><%- album.description %></p>
          <% } %>
        </a>
      </li>
    <% }) %>
  </ul>
<% } %>
<% if (album.photos.length>0){ %>
  <h2>Photos</h2>
  <ul class="photos">
    <% album.photos.forEach(function(photo){ %>
      <li class="thumb">
        <a href="<%=rootDir %><%= photo.path %>">
          <img src="/<%= directory %>/<%= photo.path %>" alt="<%= photo.name%>"><br />
          <%= photo.name%>
        </a>
      </li>
    <% }) %>
  </ul>
<% } %>
